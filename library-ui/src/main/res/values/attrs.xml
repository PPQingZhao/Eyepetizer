<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndicatorView">
        <attr name="indicatorSelectedColor" format="color" />
        <attr name="indicatorNormalColor" format="color" />
    </declare-styleable>

    <!--用于适应主题 drawable tint-->
    <attr name="themeTint" format="color" />
    <attr name="dividerColor" format="color" />

    <declare-styleable name="StateView">
        <attr name="loading_layout_id" format="reference" />
        <attr name="error_layout_id" format="reference" />
        <attr name="empty_layout_id" format="reference" />
    </declare-styleable>

    <!--ShapeableImageView 去圆角-->
    <style name="Corner0Style">
        <item name="cornerSize">0dp</item>
    </style>

    <!--ShapeableImageView 圆角-->
    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <!--ShapeableImageView 圆 -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="ExpandableTextLayout">
        <attr name="android:maxLines" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:ellipsize" />
        <attr name="android:text" />
        <attr name="expandText" format="reference|string" />
        <attr name="closeText" format="reference|string" />
        <attr name="expandedTextColor" format="reference|color" />
        <attr name="expandedTextSize" format="dimension" />
        <attr name="expand" format="boolean" />

    </declare-styleable>

</resources>