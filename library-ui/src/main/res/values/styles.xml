<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style_tab">
        <item name="android:textSize">12sp</item>
        <item name="tabTextColor">@color/selector_tab_text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/color_text_selected</item>
        <item name="tabIndicator">@drawable/layer_tab_indicator</item>

    </style>

    <style name="Style_edittext">
        <item name="android:minHeight">48dp</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:background">@drawable/inset_edittext_bg</item>
        <item name="android:textCursorDrawable">@drawable/shape_edittext_cursor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Style_textinputlayout">
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>
</resources>