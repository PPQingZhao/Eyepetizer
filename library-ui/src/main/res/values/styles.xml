<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance_tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Style_tab" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">@color/textColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/textColor</item>
        <item name="tabIndicator">@drawable/layer_tab_indicator</item>
        <item name="tabTextAppearance">@style/TextAppearance_tab</item>
        <item name="tabPadding">0dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabPaddingBottom">0dp</item>
    </style>

    <style name="Style_edittext">
        <item name="android:minHeight">48dp</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:background">@drawable/inset_edittext_bg</item>
        <item name="android:textCursorDrawable">@drawable/shape_edittext_cursor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Style_textinputlayout">

        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/colorWindowBackground</item>
    </style>

    <style name="StyleItemVideo">
        <item name="surface_type">texture_view</item>
        <item name="show_timeout">36000000</item>
        <item name="hide_on_touch">false</item>
        <item name="use_controller">false</item>
    </style>

    <!--ShapeableImageView 去圆角-->
    <style name="Corner0Style">
        <item name="cornerSize">0dp</item>
    </style>

    <!--ShapeableImageView 圆角-->
    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <!--ShapeableImageView 左上圆角-->
    <style name="LeftTopRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">6dp</item>
    </style>

    <!--ShapeableImageView 左下圆角-->
    <style name="LeftBottomRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">6dp</item>
    </style>

    <!--ShapeableImageView 右上圆角-->
    <style name="RightTopRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
    </style>

    <!--ShapeableImageView 右下圆角-->
    <style name="RightBottomRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">6dp</item>
    </style>

    <!--ShapeableImageView 左圆角-->
    <style name="LeftRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeBottomLeft">6dp</item>
    </style>

    <!--ShapeableImageView 右圆角-->
    <style name="RightRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeBottomRight">6dp</item>
    </style>

    <!--ShapeableImageView 圆 -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>