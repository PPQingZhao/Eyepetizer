<resources>
    <!--
      1.colorPrimary 应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色
      2.colorPrimaryDark 应用的主要暗色调，statusBarColor默认使用该颜色
      3.statusBarColor 状态栏颜色，默认使用colorPrimaryDark
      4.windowBackground 窗口背景颜色
      5.navigationBarColor 底部栏颜色
      6.colorForeground 应用的前景色，ListView的分割线，switch滑动区默认使用该颜色
      7.colorBackground 应用的背景色，popMenu的背景默认使用该颜色
      8.colorAccent CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色
      9.colorControlNormal CheckBox，RadioButton，SwitchCompat等默认状态的颜色。
      10.colorControlHighlight 控件按压时的色调
      11.colorControlActivated 控件选中时的颜色，默认使用colorAccent
      12.colorButtonNormal 默认按钮的背景颜色
      13.editTextColor：默认EditView输入框字体的颜色。
      14.textColor Button，textView的文字颜色
      15.textColorPrimaryDisableOnly RadioButton checkbox等控件的文字
      16.textColorPrimary 应用的主要文字颜色，actionBar的标题文字默认使用该颜色
      17.colorSwitchThumbNormal: switch thumbs 默认状态的颜色. (switch off)
  -->
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:editTextColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="themeTint">@color/drawableTint</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="indicatorNormalColor">@color/indicatorNormalColor</item>
        <item name="indicatorSelectedColor">@color/indicatorSelectedColor</item>
        <item name="android:progressTint">@color/progressTint</item>
        <item name="android:secondaryProgressTint">@color/secondaryProgressTint</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>

    </style>

    <style name="Theme.Night" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/nightColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/nightColorOnPrimary</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="colorControlHighlight">@color/nightColorControlHighlight</item>
        <item name="colorControlNormal">@color/nightColorControlNormal</item>
        <item name="android:textColor">@color/nightTextColor</item>
        <item name="hintTextColor">@color/nightHintTextColor</item>
        <item name="android:textColorSecondary">@color/nightTextColorSecondary</item>
        <item name="android:editTextColor">@color/nightEditTextColor</item>
        <item name="android:textColorHint">@color/nightHintTextColor</item>
        <item name="themeTint">@color/nightDrawableTint</item>
        <item name="dividerColor">@color/nightDividerColor</item>
        <item name="indicatorNormalColor">@color/nightIndicatorNormalColor</item>
        <item name="indicatorSelectedColor">@color/nightIndicatorSelectedColor</item>
        <item name="android:progressTint">@color/nightProgressTint</item>
        <item name="android:secondaryProgressTint">@color/nightSecondaryProgressTint</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/nightColorWindowBackground</item>

    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>

</resources>